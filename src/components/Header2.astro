<header
    class="relative flex flex-wrap sm:justify-start sm:flex-nowrap w-full bg-white text-sm py-3 shadow-md rounded-b-lg"
>
    <nav
        class="max-w-[85rem] w-full mx-auto px-4 sm:flex sm:items-center sm:justify-between"
    >
        <!-- image -->
        <div class="flex items-center justify-between">
            <a class="flex-none" href="/" aria-label="Ir a la página principal">
                <img
                    src="/image/logo.jpg"
                    alt="Logo de CEMEDE"
                    class="w-32 md:w-40 lg:w-60 rounded-lg"
                />
            </a>
            <!-- Mobile menu -->
            <div class="sm:hidden">
                <button
                    type="button"
                    class="hs-collapse-toggle relative size-9 flex justify-center items-center gap-x-2 rounded-lg border shadow-2xs focus:outline-hidden disabled:opacity-200 disabled:pointer-events-none bg-transparent border-neutral-200 text-black hover:bg-black/10 focus:bg-black/10"
                    id="hs-navbar-example-collapse"
                    aria-expanded="false"
                    aria-controls="hs-navbar-example"
                    aria-label="Toggle navigation"
                    data-hs-collapse="#hs-navbar-example"
                >
                    <svg
                        class="hs-collapse-open:hidden shrink-0 size-4"
                        xmlns="http://www.w3.org/2000/svg"
                        width="24"
                        height="24"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        ><line x1="3" x2="21" y1="6" y2="6"></line><line
                            x1="3"
                            x2="21"
                            y1="12"
                            y2="12"></line><line x1="3" x2="21" y1="18" y2="18"
                        ></line></svg
                    >
                    <svg
                        class="hs-collapse-open:block hidden shrink-0 size-4"
                        xmlns="http://www.w3.org/2000/svg"
                        width="24"
                        height="24"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        ><path d="M18 6 6 18"></path><path d="m6 6 12 12"
                        ></path></svg
                    >
                    <span class="sr-only">Toggle navigation</span>
                </button>
            </div>
        </div>
        <!-- Desktop menu -->
        <div
            id="hs-navbar-example"
            class="hidden hs-collapse overflow-hidden transition-all duration-300 basis-full grow sm:block"
            aria-labelledby="hs-navbar-example-collapse"
        >
            <div
                class="flex flex-col gap-5 mt-5 sm:flex-row sm:items-center sm:justify-end sm:mt-0 sm:ps-5"
            >
                <a
                    class="font-medium text-lg text-gray-500 hover:text-blue-600 focus:outline-hidden focus:text-blue-600"
                    href="#gallery"
                    aria-current="page">Galería</a
                >
                <a
                    class="font-medium text-lg text-gray-500 hover:text-blue-600 focus:outline-hidden focus:text-blue-600"
                    href="#content">Contenido</a
                >
                <a
                    class="font-medium text-lg text-gray-500 hover:text-blue-600 focus:outline-hidden focus:text-blue-600"
                    href="#contact">Contacto</a
                >
            </div>
        </div>
    </nav>
</header>
